<?xml version="1.0" encoding="UTF-8" ?>
 <!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.house.dragonfly.facitilyMapperr">

	<!-- 전체 사업자 가입자 조회 -->
	<select id="listAll" resultType="com.house.dragonfly.domain.FacilityVO">
		select * from facility
	</select>

	  <!-- 이메일로 조회 -->
   <select id="selectOne" resultType="com.house.dragonfly.domain.FacilityVO">
      select * from facility
       where fac_id = #{fac_id}
   </select>

   <!-- 회원추가 -->
   <insert id="insert">
    insert into facility
   	 values(#{fac_id}, #{fac_name}, #{fac_description})
</insert>
	
	<!-- 정보수정 -->
	<update id="update">
    update facility set values(#{fac_id}, #{fac_name}, #{fac_description})
   	 where fac_id=#{fac_id}
</update>
	
	<!-- 회원탈퇴 -->
	<delete id="delete">
		delete from facility  where fac_id = #{fac_id}
	</delete>
	
	

</mapper>