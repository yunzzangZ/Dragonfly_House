<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.house.dragonfly.admin.register.RegiMapper">

    <!-- 기존 insertMember 메서드 -->
<insert id="insertMember" parameterType="com.house.dragonfly.domain.MEMBER">
    INSERT INTO member (email, password, tel, name, admin_check)
    VALUES (#{email}, #{password}, #{tel}, #{name}, #{admin_check})
</insert>

    <!-- 추가: 이메일 중복 확인 메서드 -->
    <select id="selectMemberByEmail" resultType="com.house.dragonfly.domain.MEMBER" parameterType="String">
        SELECT * FROM member WHERE email = #{email}
    </select>
</mapper>
