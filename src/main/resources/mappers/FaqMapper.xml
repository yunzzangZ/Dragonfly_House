<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.house.dragonfly.FaqMapper">

    <select id="faqList" resultType="com.house.dragonfly.domain.FAQ">
        SELECT * FROM faq ORDER BY faq_id DESC
    </select>

    <select id="faqView" parameterType="int" resultType="com.house.dragonfly.domain.FAQ">
        SELECT * FROM faq WHERE faq_id = #{faq_id}
    </select>

    <insert id="faqAdd" parameterType="com.house.dragonfly.domain.FAQ">
        INSERT INTO faq (question, answer) 
        VALUES (#{question}, #{answer})
    </insert>

    <update id="faqUpdate" parameterType="com.house.dragonfly.domain.FAQ">
        UPDATE faq 
        SET question = #{question}, answer = #{answer} 
        WHERE faq_id = #{faq_id}
    </update>

</mapper>
